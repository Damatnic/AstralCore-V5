{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/lib/auth.ts",
    "src/lib/types.ts",
    "src/lib/monitoring/index.ts",
    "src/lib/validation/schemas.ts",
    "src/lib/cache/cache-utils.ts",
    "src/lib/test-utils/database-helper.ts",
    "src/lib/test-utils/test-helpers.ts",
    "src/components/loading/exports.ts",
    "src/app/api/user/profile/route.ts",
    "src/app/api/user/wellness-goals/route.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}
